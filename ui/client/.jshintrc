{
    //Use another configuration file as a "base"
    "extends": "../.jshintrc",
    //defines globals exposed by modern browsers
    "browser": true,
    //defines globals from jasmine
    "jasmine": true,

    //third party usage
    //a white list of global variables that are not formally defined in the source code
    "globals": {
        "$": true,
        "after": true,
        "afterEach": true,
        "angular": true,
        "before": true,
        "beforeEach": true,
        "browser": true,
        "by": true,
        "console": true,
        "ddescribe": true,
        "describe": true,
        "element": true,
        "expect" : true,
        "expect": true,
        "iit" : true,
        "inject": true,
        "it": true,
        "jQuery": true,
        "module": true,
        "spyOn": true,
        "sessionStorage": true,
        "top": true,
        "window": true,
        "xdescribe": true,
        "xit" : true,
        "XMLHttpRequest": true
    }
}
