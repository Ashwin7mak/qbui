{
  //Use another configuration file as a "base"
  "extends": "../.jshintrc",
  // defines globals available when your code is running inside of the Node
  // skips some warnings that make sense in the browser environments but not in in Node
  "node": true,
  //a white list of global variables that are not formally defined in the source code
  "globals": {
    "__dirname": false,
    "__filename": false,
    "after": false,
    "afterEach": false,
    "before": false,
    "beforeEach": false,
    "ddescribe": false,
    "describe": false,
    "expect": false,
    "iit": false,
    "it": false,
    "module": false,
    "moment": false,
    "require": false,
    "xdescribe": false,
    "xit": false
  }
}
