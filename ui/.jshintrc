{
    //prohibits the use of bitwise operators usually its a mistyped &&
    "bitwise": true,
    //require === or !=== (don't do any coercion)
    "eqeqeq": true,
    // enables warnings about the `debugger` statements in your code.
    "debug": false,
    //enables new javascript syntax ECMAScript 6
    "esnext": true,
    //prohibits overwriting prototypes of native objects such as Array, Date etc.
    "freeze":true,
    //warnings about the use of identifiers which are defined in future versions of JavaScript.
    "futurehostile":true,
    //prohibits the use of soon deprecated for performance arguments.caller and arguments.callee
    "noarg": true,
    //prohibits the use of of the comma operator.
    "nocomma": true,
    //control how nested do you want your blocks
    "maxdepth":4,
    // max number of formal parameters allowed per function
    "maxparams":7,
    // max number of statements allowed per function
    "maxstatements":50,
    //prohibits the use of a variable before it was defined, nofunc will allow function declarations to be ignored.
    "latedef": "nofunc",
    //enforces the consistency of quotation marks used
    "quotmark": true,
    // warn about not running in strict mode, which eliminates some JavaScript pitfalls
    "strict": true,
    //prohibits the use of explicitly undeclared variable, catches typos
    "undef": true,
    //warns when you define and never use your variables
    "unused": true,
    //third party usage
    //a white list of global variables that are not formally defined in the source code
    "globals": {
        "Chance" : false,
        "process" : false,
        "require" : false,
        "exports" : false,
        "module": false,
        "setTimeout": false,
        "__dirname" : false,
        "_": false
    }
}
