// This file controls specific rules for the server folder which runs on Node instead of being transpiled by Babel.
// Most rules should be defined in the .eslintrc file in the ui directory. This file is only for a few exceptions.
{
  // http://eslint.org/docs/rules/
  "rules": {
    // value key
    // 0 - turn the rule off
    // 1 - turn the rule on as a warning (doesn't affect exit code)
    // 2 - turn the rule on as an error (exit code will be 1)

    ////////// Possible Errors //////////

    "babel/no-invalid-this": 0,    // disallow this keywords outside of classes or class-like objects
    "no-invalid-this": 2
  }
}
